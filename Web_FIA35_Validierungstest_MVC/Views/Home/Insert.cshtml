@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Web_FIA35_Validierungstest_MVC.Models.InsertViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <h1>Insert</h1>
    <form asp-action="insert" method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"><label asp-for="@Model.Name"></label></th>
                    <th scope="col"><label asp-for="@Model.Vorname"></label></th>
                    <th scope="col"><label asp-for="@Model.Geburtsdatum"></label></th>
                    <th scope="col"><label asp-for="@Model.Schuhgroesse"></label></th>
                    <th scope="col"><label asp-for="@Model.Wunschgehalt"></label></th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <thbody>
                <tr>
                    <td>
                        <input asp-for="@Model.Name" /><span style="color:red" asp-validation-for="@Model.Name"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Vorname" /><span style="color:red" asp-validation-for="@Model.Vorname"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Geburtsdatum" /><span style="color:red" asp-validation-for="@Model.Geburtsdatum"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Schuhgroesse" /><span style="color:red" asp-validation-for="@Model.Schuhgroesse"></span>
                    </td>
                    <td>
                        <input asp-for="@Model.Wunschgehalt" /><span style="color:red" asp-validation-for="@Model.Wunschgehalt"></span>
                    </td>
                </tr>
            </thbody>
        </table>
        <button>Speichern</button>
        <button type="reset">Zurücksetzen</button>
    </form>
    <!-- Link ist immer auch ein Request mit einer GET-Methode-->
    <a href="/home/index">Zurück zur Startseite</a>
</body>
</html>
